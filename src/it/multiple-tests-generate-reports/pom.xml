<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>com.lazerycode.jmeter</groupId>
    <artifactId>multiple-tests-generate-reports-integration-test</artifactId>
    <version>DEV-SNAPSHOT</version>

    <description>Check that report generation works</description>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>

    <repositories>
        <repository>
            <id>apache-snapshots</id>
            <name>Apache Snapshots</name>
            <url>https://repository.apache.org/content/groups/snapshots/</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

    <build>
        <plugins>
            <plugin>
                <groupId>@project.groupId@</groupId>
                <artifactId>@project.artifactId@</artifactId>
                <version>@project.version@</version>
                <configuration>
                    <!--TODO Remove this extra configuration when 3.2 is out-->
                    <jmeterVersion>3.2-SNAPSHOT</jmeterVersion>
                    <jmeterArtifacts>
                        <artifact>org.apache.jmeter:ApacheJMeter:3.2-SNAPSHOT</artifact>
                        <artifact>org.apache.jmeter:ApacheJMeter_components:3.2-SNAPSHOT</artifact>
                        <artifact>org.apache.jmeter:ApacheJMeter_config:3.2-SNAPSHOT</artifact>
                        <artifact>org.apache.jmeter:ApacheJMeter_core:3.2-SNAPSHOT</artifact>
                        <artifact>org.apache.jmeter:ApacheJMeter_ftp:3.2-SNAPSHOT</artifact>
                        <artifact>org.apache.jmeter:ApacheJMeter_functions:3.2-SNAPSHOT</artifact>
                        <artifact>org.apache.jmeter:ApacheJMeter_http:3.2-SNAPSHOT</artifact>
                        <artifact>org.apache.jmeter:ApacheJMeter_java:3.2-SNAPSHOT</artifact>
                        <artifact>org.apache.jmeter:ApacheJMeter_jdbc:3.2-SNAPSHOT</artifact>
                        <artifact>org.apache.jmeter:ApacheJMeter_jms:3.2-SNAPSHOT</artifact>
                        <artifact>org.apache.jmeter:ApacheJMeter_junit:3.2-SNAPSHOT</artifact>
                        <artifact>org.apache.jmeter:ApacheJMeter_ldap:3.2-SNAPSHOT</artifact>
                        <artifact>org.apache.jmeter:ApacheJMeter_mail:3.2-SNAPSHOT</artifact>
                        <artifact>org.apache.jmeter:ApacheJMeter_mongodb:3.2-SNAPSHOT</artifact>
                        <artifact>org.apache.jmeter:ApacheJMeter_native:3.2-SNAPSHOT</artifact>
                        <artifact>org.apache.jmeter:ApacheJMeter_slf4j_logkit:3.2-SNAPSHOT</artifact>
                        <artifact>org.apache.jmeter:ApacheJMeter_tcp:3.2-SNAPSHOT</artifact>
                        <artifact>org.apache.jmeter:jorphan:3.2-SNAPSHOT</artifact>
                    </jmeterArtifacts>
                    <suppressJMeterOutput>false</suppressJMeterOutput>
                    <testFilesIncluded>
                        <testFilesIncluded>**/*.jmx</testFilesIncluded>
                    </testFilesIncluded>
                    <generateReports>true</generateReports>
                </configuration>
                <executions>
                    <execution>
                        <id>configure</id>
                        <goals>
                            <goal>configure</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>performance test</id>
                        <goals>
                            <goal>jmeter</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>verify</id>
                        <goals>
                            <goal>results</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
